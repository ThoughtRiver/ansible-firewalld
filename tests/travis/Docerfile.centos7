FROM centos:7

ARG ANSIBLE_VERSION

RUN set -x \
  && yum update -y \
  && yum install -y \
         gcc \
         python-devel \
         openssl-devel \
  && curl -kL https://bootstrap.pypa.io/get-pip.py | python \
  && [ ${ANSIBLE_VERSION} == "latest" ] && pip install ansible || pip install ansible\==${ANSIBLE_VERSION}

